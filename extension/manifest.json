{
  "icons": {
    "48": "48.png",
    "128": "128.png",
    "256": "256.png"
  },
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "name": "Postulate: 10x your learning and writing output",
  "version": "0.17.0",
  "description": "Postulate is a notetaking platform that helps you publish your ideas instead of forgetting them.",
  "browser_action" : {
    "default_popup" : "popup.html",
    "default_icon" : {
      "48": "48.png",
      "128": "128.png",
      "256": "256.png"
    }
  },
  "commands": {
    "keyboard_save": {
      "suggested_key": {
        "windows": "Alt+P",
        "mac": "Alt+P",
        "chromeos": "Alt+P",
        "linux": "Alt+P"
      },
      "description": "Save page or selection as Postulate snippet"
    }
  },
  "background": {
    "scripts": ["background.js"]
  }
}